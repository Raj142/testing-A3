<% for(var i = 0; i < books.length; i++) { %>
    <tr>
        <td><%= i + 1 %></td>
        <td><%= books[i].book_name %></td>
        <td><%= books[i].price %></td>
        <td><%= books[i].catagory %></td>
        <td><%= books[i].stock %></td>
        <td>
        <a href="/update-user?id=<%= books[i]._id%>" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id=<%= books[i]._id%> >
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>
    </td>
</tr>
<% } %>